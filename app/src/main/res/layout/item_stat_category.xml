<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:paddingVertical="2dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_stat_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="8dp"
            android:src="@drawable/wallet_img" />


        <TextView
            android:id="@+id/item_stat_nameCategory"
            android:layout_width="148dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/montserratregular400"
            android:paddingLeft="16dp"
            android:text="nameCategory"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:baselineAligned="false"
            android:gravity=""
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_stat_expense"
                android:layout_width="160dp"
                android:layout_height="41dp"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:text="Rp 0"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:fontFamily="@font/montserratregular400"
                android:textStyle="bold"
                android:textAlignment="textEnd"
                tools:ignore="RtlCompat" />

            <TextView
                android:id="@+id/item_stat_percentage"
                android:layout_width="160dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:text="percentage"
                android:textSize="12dp"
                android:fontFamily="@font/montserratregular400"
                android:textAlignment="textEnd" />


        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>