<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="3dp"
    android:paddingVertical="2dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true"
    android:divider="@null">


<androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="15dp"
    app:cardCornerRadius="12dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">

        <ImageView
            android:id="@+id/item_stat_imgWallet"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/wallet_img"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/item_stat_nameWallet"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="nameWallet"
            android:gravity="center"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="16dp"
            android:fontFamily="@font/montserratregular400"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/item_stat_saldoWallet"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Rp 1000000"
            android:fontFamily="@font/montserratregular400"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="@color/black"
            />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Expense"
            android:textStyle="bold"
            android:fontFamily="@font/montserratregular400"
            android:textSize="14dp"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Income"
            android:textStyle="bold"
            android:fontFamily="@font/montserratregular400"
            android:textSize="14dp"
            android:textColor="@color/black"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:progressDrawable="@drawable/custom_progress_bar"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp">

        <TextView
            android:id="@+id/item_stat_expense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/montserratregular400"
            android:textSize="14dp"
            android:text="Rp 50000"/>

        <TextView
            android:id="@+id/item_stat_income"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserratregular400"
            android:textSize="14dp"
            android:text="Rp 1500000"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>

</androidx.cardview.widget.CardView>
