<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Home"
    android:orientation="vertical"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--Kotak Tosca-->
        <LinearLayout
        android:id="@+id/kotak_tosca"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/tosca"
        tools:ignore="MissingConstraints"
        android:orientation="vertical" />

        <!--com.example.moneymanagementproject.Home Header-->
        <LinearLayout
            android:id="@+id/home_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/kotak_tosca"
            android:layout_marginHorizontal="20dp"
            android:orientation="vertical"
>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@mipmap/ic_launcher_foreground"
                android:textAlignment="center"
                android:paddingVertical="0dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingVertical="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your Balance"
                        android:fontFamily="@font/montserratregular400"
                        android:textSize="14sp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/total_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:fontFamily="@font/montserratregular400"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/black"
                        />


                </LinearLayout>
            </androidx.cardview.widget.CardView>



        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/wallet_home_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@id/home_header"
            >

            <TextView
                android:id="@+id/wallet_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Wallets"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="@font/montserratregular400"
                app:layout_constraintTop_toTopOf="@+id/wallet_home_layout"
                android:paddingBottom="8dp"
                tools:ignore="MissingConstraints" />

            <GridView
                android:id="@+id/wallet_grid"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:minHeight="125dp"
                android:horizontalSpacing="10dp"
                android:numColumns="2"
                android:verticalSpacing="12dp"
                android:paddingHorizontal="7dp"
                app:layout_constraintTop_toBottomOf="@+id/wallet_text"
                tools:layout_editor_absoluteX="0dp"
                android:clipToPadding="false"
                tools:listitem="@layout/item_wallet">

            </GridView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@id/wallet_home_layout">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/home_transaction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/montserratregular400"
                android:paddingBottom="8dp"
                android:text="Your Latest Transactions"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/home_transaction_see_more"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:background="@drawable/input_box"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/montserratregular400"
                android:text="See More"
                android:textAllCaps="false"
                android:textSize="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <ListView
                android:id="@+id/list_view_transaction_home"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:minHeight="150dp"
                android:divider="@android:color/transparent"
                android:dividerHeight="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/home_transaction"
                tools:listitem="@layout/recycler_view_transaction" />



        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>