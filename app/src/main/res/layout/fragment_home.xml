<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Home"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/home_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp">

        <TextView
            android:id="@+id/main_logo"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="32dp"
            android:text="LOGO"
            android:textAlignment="center"

            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:textSize="24dp"
            android:text="Hi, User"
            app:layout_constraintTop_toBottomOf="@id/main_logo" />

        <TextView
            android:id="@+id/total_amount_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Balance"
            android:textAlignment="center"
            android:textSize="18dp"
            app:layout_constraintTop_toBottomOf="@id/username"/>

        <TextView
            android:id="@+id/total_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rp. 0"
            android:textSize="28dp"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/total_amount_id"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/wallet_home_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp">

        <TextView
            android:id="@+id/wallet_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Wallet"
            android:textSize="18dp"

            app:layout_constraintTop_toTopOf="parent" />

        <GridView
            android:id="@+id/wallet_grid"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:horizontalSpacing="5dp"
            android:numColumns="2"
            android:verticalSpacing="5dp"
            app:layout_constraintTop_toBottomOf="@+id/wallet_text"
            tools:layout_editor_absoluteX="0dp"
            tools:listitem="@layout/item_wallet">

        </GridView>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/wallet_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Wallet"
            app:layout_constraintTop_toBottomOf="@+id/wallet_grid"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/home_transaction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Latest Transactions"
            android:textSize="18dp"
            app:layout_constraintTop_toTopOf="parent"/>
        <ListView
            android:id="@+id/list_view_transaction_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:paddingTop="5dp"
            android:dividerHeight="5dp"
            android:divider="@android:color/transparent"
            app:layout_constraintTop_toBottomOf="@+id/home_transaction"
            tools:listitem="@layout/recycler_view_transaction"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/home_transaction_see_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="See More"
            app:layout_constraintTop_toBottomOf="@id/list_view_transaction_home"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>