<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:paddingVertical="2dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/trans_ic"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="8dp"
                android:src="@drawable/wallet_img" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/trans_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="notes"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserratregular400"
                    android:textSize="16dp"/>

                <!-- KALAU RED EXPENSE -->
                <TextView
                    android:id="@+id/trans_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="- Rp. XXX,XXX,-"
                    android:textColor="@color/red"
                    android:fontFamily="@font/montserratregular400"
                    android:textSize="12dp" />

                <!-- KALAU GREEN INCOME -->
<!--                <TextView-->
<!--                    android:id="@+id/trans_amount"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="- Rp. XXX,XXX,-"-->
<!--                    android:textColor="@color/green"-->
<!--                    android:textSize="12dp" />-->

            </LinearLayout>

        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/trans_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20/10"
                android:textSize="10dp"
                android:fontFamily="@font/montserratregular400"/>

            <ImageView
                android:id="@+id/trans_wallet"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="8dp"
                android:src="@drawable/wallet_img"
                />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>