<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="Statistics.Category.Statistics">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:paddingVertical="15dp"
        android:text="Category"
        android:textSize="28dp"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/stat_cate_left"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:src="@drawable/left_arrow_ic"
            android:background="@null"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/stat_cate_date"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Tanggal"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_weight="1"/>


        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/stat_cate_right"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:src="@drawable/right_arrow_ic"
            android:background="@null"
            />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCD4D3" />


    <ListView
        android:id="@+id/stat_cate_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/item_stat_wallet"/>


</androidx.appcompat.widget.LinearLayoutCompat>